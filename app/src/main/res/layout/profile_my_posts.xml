<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/content"
            android:layout_alignRight="@id/content"
            android:layout_marginRight="5dp"
            android:text="10m" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/date"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5sp"
            android:padding="15dp"
            android:text="text text text text text text text text text text text text text text text text text text text text text text text text text text text "
            android:textSize="20sp" />


        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/content"
            app:srcCompat="@drawable/ic_like"
            android:scaleType="centerInside"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:layout_alignRight="@id/content"

            />



        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/like_button"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="100"
            />


